<%= form_for(@pipeline) do |f| %>
  <% if @pipeline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pipeline.errors.count, "error") %> prohibited this pipeline from being saved:</h2>

      <ul>
      <% @pipeline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td>Name</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>Key</td>
      <td><%= f.text_field :key %></td>
    </tr>
    <tr>
      <td>E-mail</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>Status</td>
      <% l1 = Status.all.map{|e| [e.name.upcase, e.id]} %>
      <td><%= f.select :status_id, l1 %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
